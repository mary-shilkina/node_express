<h4>Мои покупки</h4>


{{#if orders.length}}
{{#each orders}}
<div class="row" style="color: rebeccapurple;">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-content"> 
                <span class="card-title">
                    Заказ <small>{{_id}}</small>
                     </span> 
                <p class="date"> {{date}}</p>
                <p><em>{{user.userId.name}} </em></p><p>({{user.userId.email}})</p>
                <ol>
                    {{#each courses }}
                    <li>
                        {{course.title}}( x<strong>{{count}}</strong>)
                    </li>
                       {{/each}}

          
                </ol>
                
                <p> <span class="price"> {{price}}</span></p>
            </div>
        </div>
    </div>
</div>
{{/each}}

{{else}}
<p>Заказов нет</p>
{{/if}}